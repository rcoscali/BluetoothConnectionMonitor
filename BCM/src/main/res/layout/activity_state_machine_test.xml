<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.rcsnet.bluetoothmonitor.StateMachineTest">

<!--
    <com.rcsnet.bluetoothmonitor.StateMachineTest.MySurfaceView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/surfaceView"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/state1"
        android:layout_alignEnd="@+id/state8"/>
-->

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="State 1"
        android:id="@+id/state1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="24dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="State 3"
        android:id="@+id/state3"
        android:layout_below="@+id/state1"
        android:layout_alignParentStart="true"
        android:layout_marginTop="28dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="State 5"
        android:id="@+id/state5"
        android:layout_below="@+id/state3"
        android:layout_alignEnd="@+id/state3"
        android:layout_marginTop="33dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="State 7"
        android:id="@+id/state7"
        android:layout_below="@+id/state5"
        android:layout_alignEnd="@+id/state5"
        android:layout_marginTop="41dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="State 8"
        android:id="@+id/state8"
        android:layout_alignTop="@+id/state7"
        android:layout_alignParentEnd="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="State 6"
        android:id="@+id/state6"
        android:layout_alignBottom="@+id/state5"
        android:layout_alignStart="@+id/state8"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="State 4"
        android:id="@+id/state4"
        android:layout_alignBottom="@+id/state3"
        android:layout_alignStart="@+id/state6"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="State 2"
        android:id="@+id/state2"
        android:layout_alignBottom="@+id/state1"
        android:layout_alignStart="@+id/state4"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/status_text"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="START"
        android:id="@+id/start_button"
        android:layout_above="@+id/status_text"
        android:layout_alignEnd="@+id/status_text"/>

</RelativeLayout>
