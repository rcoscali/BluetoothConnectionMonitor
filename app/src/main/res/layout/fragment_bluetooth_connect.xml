<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:paddingBottom="@dimen/activity_vertical_margin"
              android:paddingLeft="16dp"
              android:paddingRight="16dp"
              android:paddingTop="@dimen/activity_vertical_margin"
              tools:context="monitor.bluetoothconnection.rcsnet.com.bluetoothconnectionmonitor.BluetoothConnect$PlaceholderFragment"
              android:orientation="vertical">

    <TextView
        android:id="@+id/section_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autoText="false"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="@color/accent_material_light"
        android:background="@drawable/abc_list_pressed_holo_dark" />

    <ListView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/section_list"/>

    <ProgressBar
        android:layout_width="164dp"
        android:layout_height="48dp"
        android:id="@+id/progressBar"
        android:indeterminate="true"
        android:visibility="visible"
        android:progress="@android:integer/config_mediumAnimTime"
        android:background="@android:drawable/spinner_background"/>

</LinearLayout>
